@inject IUserInfo login
@model BluePope.HomeWeb.Models.Board.MBoard
@{
    var page = ViewData["page"] as int?;

    var param = $"p={page}";
}

<div style="width:900px;">
    <table class="table table-common">
        <colgroup>
            <col style="width:90px" />
            <col style="width:auto" />
        </colgroup>
        <tbody class="text-left">
            <tr>
                <th>제목</th>
                <td>@Model.TITLE</td>
            </tr>
            <tr>
                <th>내용</th>
                <td style="vertical-align:top;">
                    @Html.Raw(Model.CONTENTS)
                </td>
            </tr>
            <tr>
                <th>작성자</th>
                <td>@Model.REG_USERNAME (@Model.REG_DATE.ToString("yyyy-MM-dd HH:mm:ss")) - @Model.REG_IP</td>
            </tr>
        </tbody>
    </table>


    @if (Model.REG_UID == login?.U_ID)
    {
        <div class="text-right">
            <button class="btn btn-sm btn-info btnEdit">수정하기</button>
            <button class="btn btn-sm btn-danger btnDelete">삭제하기</button>

            <script>
                $(".btnEdit").click(function () {
                    alert("수정 프로세스");
                });
                $(".btnDelete").click(function () {
                    alert("삭제 프로세스");
                });
            </script>
        </div>
    }


    <div class="text-center" style="margin-top:15px;">
        <a href="/board/list?@param" class="btn btn-sm btn-secondary">목록</a>
    </div>
</div>
