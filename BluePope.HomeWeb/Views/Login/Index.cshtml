@{
    var sitekey = ViewData["sitekey"] as string;
}
<div class="row justify-content-center">
    <div class="login-content card">
        <div class="login-form">
            <h4>Login</h4>
            <form id="form1" method="post" action="/login/login">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label>아이디</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>
                        <input name="user_id" type="text" class="form-control" maxlength="6" placeholder="사용자 ID를 입력해주세요">
                    </div>
                </div>

                <div class="form-group">
                    <label>비밀번호</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-lock"></i></span>
                        </div>
                        <input name="user_pw" type="password" class="form-control" placeholder="비밀번호를 입력해주세요">
                    </div>
                </div>

                <div>
                    <input type="checkbox" />자동로그인
                    <a class="badge badge-danger pull-right" href="/login/forget">※ 아이디 /비밀번호를 잃어버리셨나요?</a>
                </div>
                <button type="button" class="btn btn-sm btn-primary btn-flat m-t-15 btn-login">로그인</button>
                <button type="button" class="btn btn-sm btn-success btn-flat m-b-15 m-t-15 btn-login">회원가입</button>
            </form>
        </div>
    </div>
</div>

<script>
        $(".btn-login").click(function () {
            var obj = new Object();

            $("#form1 input").each(function () {
                var $this = $(this);
                obj[$this.attr("name")] = $this.val();
            });

            obj["token"] = $("textarea[name=g-recaptcha-response]").val();

            $.ajax({
                type: "POST",
                url: "/login/login",
                dataType: "json",
                data: obj,
                success: function (data, status, xhr) {
                    if (data.msg == "OK") {
                        location.replace("/");
                    }
                    else {
                        alert(data.msg);
                        grecaptcha.execute("@sitekey", { action: "homepage" });
                    }
                },
                error: function (xhr, textStatus, thrownError) {
                    AjaxCommonError(xhr);
                }
            });
        });

        $("#form1 input[name=user_id]").keydown(function (evt) {
            if (evt.keyCode == 13) {
                if ($(this).val().length > 0) {
                    $("#form1 input[name=user_pwd]").focus();
                }
            }
        });

        $("#form1 input[name=user_pwd]").keydown(function (evt) {
            if (evt.keyCode == 13) {
                if ($(this).val().length > 0) {
                    $("#form1 button.btn-login").trigger("click");
                }
            }
        });

</script>
<script src="@($"https://www.google.com/recaptcha/api.js?render={sitekey}")"></script>
<script>
        grecaptcha.ready(function () {
            grecaptcha.execute("@sitekey", { action: "homepage" });
        });
</script>
