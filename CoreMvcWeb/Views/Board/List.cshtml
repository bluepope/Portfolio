@model IList<CoreMvcWeb.Models.Board.BoardModel>

<div style="width:900px;">
    <table class="table table-common">
        <colgroup>
            <col style="width:80px" />
            <col style="width:auto" />
            <col style="width:100px" />
            <col style="width:100px" />
            <col style="width:60px" />
        </colgroup>
        <thead>
            <tr>
                <th>번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>작성일</th>
                <th>조회수</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SEQ</td>
                    <td class="text-left">
                        <a href="/board/view?seq=@item.SEQ">@item.TITLE</a>
                    </td>
                    <td>@item.REG_USERNAME</td>
                    <td>@item.REG_DATE.ToString("yyyy-MM-dd")</td>
                    <td>@item.VIEW_CNT</td>
                </tr>
            }
        </tbody>
    </table>

    @*
        min_page, now_page, max_page 값으로 page 표시
    *@
    
    <div style="margin-top:5px">
        <ul class="pagination">
            <li class="page-item active"><a class="page-link" href="/board/list?p=1">1</a></li>
            <li class="page-item"><a class="page-link" href="/board/list?p=2">2</a></li>
        </ul>
    </div>

    <div class="text-right" style="margin-top:15px;">
        <a href="/board/write" class="btn btn-sm btn-primary">글쓰기</a>
    </div>
</div>

